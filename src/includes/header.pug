mixin header(lang, path)
    - lang = lang || 'de'
    - path = path || ''
    header#header.header
        .header__wrapper
            h1.header__logo(role='banner')
                a.piano(href=base + i18n[lang].path_prefix aria-label=i18n[lang].mina_nagata rel='home')
                    .piano__top
                    .piano__bottom
                    .piano__left
                    .piano__key
            nav.header__nav
                input#menu__toggle.menu__toggle.hide-from-wide(type='checkbox', aria-label=i18n[lang].nav.toggle_menu)
                span.menu__toggle-label.menu__toggle-label--open.hide-from-wide(lang="en-GB") Menu
                span.menu__toggle-label.menu__toggle-label--close.hide-from-wide
                ul#menu__list.menu__list
                    li.menu-item
                        a(target='' href=base + i18n[lang].path_prefix + '#top')= i18n[lang].nav.home
                    li.menu-item
                        a(target='' href=base + i18n[lang].path_prefix + '#mina-nagata')= i18n[lang].mina_nagata
                    li.menu-item
                        a(target='' href=base + i18n[lang].path_prefix + '#audio-samples')= i18n[lang].nav.audio_samples
                    li.menu-item
                        a(target='' href=base + i18n[lang].path_prefix + '#concerts')= i18n[lang].nav.concerts
                    li.menu-item
                        a(target='' href=base + i18n[lang].path_prefix + '#offerings')= i18n[lang].nav.offerings
                    li.menu-item
                        a(target='' href=base + i18n[lang].path_prefix + '#contact')= i18n[lang].nav.contact
                    li.menu-item
                        if lang === 'de'
                            a(target='' href=(base + 'en/' + path)) EN
                            span.divider |
                            a(target='' href=(base + 'ja/' + path)) JA
                        if lang === 'en'
                            a(target='' href=(base + path)) DE
                            span.divider |
                            a(target='' href=(base + 'ja/' + path)) JA
                        if lang === 'ja'
                            a(target='' href=(base + path)) DE
                            span.divider |
                            a(target='' href=(base + 'en/' + path)) EN
